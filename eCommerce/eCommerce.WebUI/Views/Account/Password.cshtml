@using eCommerce.WebUI.Models.Account
@model Password
@{
    ViewBag.Title = "Password";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
<script type="text/javascript" src="@Url.Content("~/Scripts/MicrosoftAjax.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MicrosoftMvcAjax.js")"></script>
<script type="text/javascript" src="@Url.Content("~/Scripts/MicrosoftMvcValidation.debug.js")"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

<div id="content">
    <div class="top">
        <div class="left">
        </div>
        <div class="right">
        </div>
        <div class="center">
            <h1>
                Change Password</h1>
        </div>
    </div>
    <div class="middle">
        @using (@Html.BeginForm("Password", "Account", FormMethod.Post, new { id = "password" }))
        {
            if (!Model.Success)
            {
            <b style="margin-bottom: 2px; display: block;">Change Password Fail</b>
            }
            <div class="content">
                <table>
                    <tbody>
                        <tr>
                            <td>
                                <span class="required">*</span>Old Password:
                            </td>
                            <td>@Html.PasswordFor(x => x.OldPassword)
                                @Html.ValidationMessageFor(x => x.OldPassword)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class="required">*</span>New Password:
                            </td>
                            <td>
                                @Html.PasswordFor(x => x.NewPassword)
                                @Html.ValidationMessageFor(x => x.NewPassword)
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <span class="required">*</span> Password Confirm:
                            </td>
                            <td>
                                @Html.PasswordFor(x => x.RetypePassword)
                                @Html.ValidationMessageFor(x => x.RetypePassword)
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="buttons">
                <table>
                    <tbody>
                        <tr>
                            <td align="left">
                                <a class="button" href="@Url.Action("Index","Account")"><span>Back</span></a>
                            </td>
                            <td align="right">
                                <a class="button" onclick="$('#password').submit();"><span>Change Password</span></a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        }
    </div>
    <div class="bottom">
        <div class="left">
        </div>
        <div class="right">
        </div>
        <div class="center">
        </div>
    </div>
</div>
